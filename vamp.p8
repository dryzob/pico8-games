-- todo: add vector for move

function cvamp()
	if(btn(⬅️)) vamp.vel.x -= vamp.spe
	if(btn(➡️)) vamp.vel.x += vamp.spe
	if(btn(⬆️)) vamp.vel.y -= vamp.spe
	if(btn(⬇️)) vamp.vel.y += vamp.spe
	
end

function dvamp()
	local backward=false
	if(vamp.vel.x<0) backward=true

	spr(vamp.sprite,vamp.x,vamp.y,1,1,backward)
end

function uvamp()
	vamp.x+=vamp.vel.x
	vamp.y+=vamp.vel.y
	
	vamp.vel.x=frict(vamp.vel.x)
	vamp.vel.y=frict(vamp.vel.y)
end
