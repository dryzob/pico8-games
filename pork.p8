-- gameplay

function moveplayer(dx,dy)
	local destx,desty=p_x+dx,p_y+dy
	local tle=mget(destx,desty)
	
	p_flip=dy!=0 and p_flip or dx<0
	
	if fget(tle,0) then
	-- obj
		p_sox,p_soy=dx*8,dy*8
		p_ox,p_oy=0,0
		p_t=0
		
		_upd=upd_pturn
		p_mov=mov_bump
		if fget(tle,1) then
			trig_bump(tle,destx,desty)
		else
			sfx(1)
		end
	else
		sfx(3)
		p_x+=dx
		p_y+=dy
		
		p_sox,p_soy=-dx*8,-dy*8
		p_ox,p_oy=p_sox,p_soy
		p_t=0
		
		_upd=upd_pturn
		p_mov=mov_walk
	end
end

function trig_bump(tle,dx,dy)

		if tle==7 or tle==8 then
		--vase
		sfx(4)
		mset(dx,dy,1)
	elseif tle==10 or tle==12 then
		--chest
		sfx(2)
		mset(dx,dy,tle-1)
	elseif tle==13 then
		--door
		sfx(5)
		mset(dx,dy,1)
	end
end
