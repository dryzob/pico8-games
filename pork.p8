-- tools

function getframe(ani)
	return ani[flr(t/15)%#ani+1]
end

function drawspr(_spr,_x,_y,_c,_f)
	palt(0,false)
	pal(6,_c)
	spr(_spr,_x,_y,1,1,_f)
	pal()
end
