--[[
	rougelike game
	tutorial found on youtube
	by lazy devs
]]
function _init()
	t=0
	p_ani={240,241}
	
	dirx={-1,1,0,0}
	diry={0,0,-1,1}
	
	_upd=upd_game
	_drw=drw_game
	startgame()
end

function _update60()
	t+=1
	_upd()
end

function _draw()
	_drw()
end

function startgame()
	buttbuff=-1

	p_x=1
	p_y=1
	p_ox=0
	p_oy=0
	p_sox=0
	p_soy=0
	p_flip=false
	p_mov=nil
	p_t=0
end
